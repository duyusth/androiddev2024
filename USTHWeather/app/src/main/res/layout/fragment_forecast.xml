<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#e0f7fa"> <!-- Màu nền xanh -->

    <!-- Thứ hai -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mon"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:src="@drawable/cloud"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Partly Cloudy"
                android:textSize="16sp"
                android:textColor="#000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24C - 31C"
                android:textSize="14sp"
                android:textColor="#555"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Thứ ba -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="Tue"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:src="@drawable/drizzle"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Showers"
                android:textSize="16sp"
                android:textColor="#000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24C - 30C"
                android:textSize="14sp"
                android:textColor="#555"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Thứ tư -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="Wed"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="34dp"
            android:layout_weight="1"
            android:src="@drawable/rain" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rain"
                android:textSize="16sp"
                android:textColor="#000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22C - 23C"
                android:textSize="14sp"
                android:textColor="#555"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Thứ năm -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="Thu"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:src="@drawable/cloud"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scattered Showers"
                android:textSize="16sp"
                android:textColor="#000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22C - 27C"
                android:textSize="14sp"
                android:textColor="#555"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Thứ sáu -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="Fri"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:src="@drawable/cloud"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mostly Cloudy"
                android:textSize="16sp"
                android:textColor="#000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24C - 30C"
                android:textSize="14sp"
                android:textColor="#555"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Thứ bảy -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="Sat"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:src="@drawable/thunderstorm_icon_14"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thunderstorms"
                android:textSize="16sp"
                android:textColor="#000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25C - 28C"
                android:textSize="14sp"
                android:textColor="#555"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Chủ nhật -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:text="Sun"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:src="@drawable/thunderstorm_icon_14"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thunderstorms"
                android:textSize="16sp"
                android:textColor="#000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23C - 27C"
                android:textSize="14sp"
                android:textColor="#555"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
